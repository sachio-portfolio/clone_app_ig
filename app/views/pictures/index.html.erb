<div class="col-xs-12 col-md-2">
</div>
<div class="col-xs-12 col-sm-8 col-md-8 row no-gutters">
  <p id="notice"><%= notice %></p>
  <div class="picture_index container">
    <div class="row no-gutters">
      <% @pictures.each do |picture| %>
        <div class="hover_parent col-8 col-sm-6 col-md-4">
          <%= link_to image_tag(picture.image.thumb.url, class: "img-fluid"), picture %>
          <div class="hover_mask">
            <%= link_to picture_path(picture.id), class: "hover_link" do %>
              <i class="fas fa-heart caption"><%= picture.favorite_users.count %></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-xs-12 col-md-2">
</div>
