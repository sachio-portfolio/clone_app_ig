<div class="col-xs-12 col-md-2">
</div>
<div class="col-xs-12 col-sm-8 col-md-4">
  <h5>Confirmation screen</h5>
  <%= form_with(model: @picture, local: true, url: pictures_path) do |f| %>
    <%= f.hidden_field :image_cache %>
    <%= f.hidden_field :content %>
    <%= image_tag @picture.image.url, class: "img-fluid" %><br>
</div>
<div class="col-xs-12 col-md-3">
    <strong><%= @picture.user.name %></strong>
    <%= @picture.content %><br>
    <%= f.submit  "投稿"  %>
  <% end %>
  <%= form_with(model: @picture, local: true, url: new_picture_path, method: "get") do |f| %>
    <%= f.hidden_field :image %>
    <%= f.hidden_field :content %>
    <%= f.submit  "Back", name: 'back'  %>
  <% end %>
</div>
<div class="col-xs-12 col-md-3">
</div>
