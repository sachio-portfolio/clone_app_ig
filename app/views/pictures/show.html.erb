<p id="notice"><%= notice %></p>

<%= image_tag @picture.image.url %><br>
<%= @picture.content %>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入り', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
<br>
<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Destroy', picture_path, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Back', pictures_path %>
