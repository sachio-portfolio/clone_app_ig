<p id="notice"><%= notice %></p>

<%= image_tag @picture.image.url %><br>
<%= @picture.content %>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to favorite_path(id: @favorite.id), method: :delete do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to favorites_path(picture_id: @picture.id), method: :post do%>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% end %>
<br>
<br>
<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Destroy', picture_path, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Back', pictures_path %>
